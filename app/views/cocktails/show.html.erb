<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), method: :delete do %>
    <i class="far fa-times-circle cross"></i>
  <% end %>
<% end %>
<%= simple_form_for ([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.all.order(:name),
  prompt: "Choose an ingredient" %>
  <%= f.button :submit %>
<% end %>
<div><%= link_to 'Back to cocktails', cocktails_path  %></div>
